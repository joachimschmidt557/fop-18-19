;; about the language level of this file in a form that our tools can easily process.
#reader(lib "htdp-advanced-reader.ss" "lang")((modname U00_NACHNAME_VORNAME) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #t #t none #f () #f)))
;; Type: int string string -> string
;; Returns: A correct filename for the given Übung, ln (last name) and fn (first name)
(define (generate-filename nr ln fn)
  ;; Append String
  (
    string-append "H"   ; The initial character H
    (number->string 0)  ; Trailing zero
    (number->string nr) ; The number of the Übung converted to string
    "_"                 ; Underscore for separation
    ln                  ; Nachname
    "_"                 ; Underscore for separation
    fn                  ; Vorname
    ".rkt"              ; File extension 
  )
  )

; Test 3 times
(check-expect (generate-filename 0 "Schmidt" "Joachim") "H00_Schmidt_Joachim.rkt")
(check-error (generate-filename "asdf" "Schmidt" "Joachim") "expects a number")
(check-expect (generate-filename 0 "Fritzgerald" "Heinz-Müller") "H00_Fritzgerald_Heinz-Müller.rkt")
